<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"

    android:padding="2dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="35dp"

        android:id="@+id/layoutreceiver"
        >
        <ImageView
            android:id="@+id/image_reciever"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/pfp_user" />

        <TextView
            android:id="@+id/text_reciever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/image_reciever"
            android:text="Sachin"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/text_reciever"
            android:paddingTop="5dp"
            android:text="COUNSELLOR"
            android:textSize="10sp" />
    </RelativeLayout>

<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="35dp"
        android:background="@drawable/recieverchatdrawable"
        android:id="@+id/layoutformessage"
    android:layout_below="@id/layoutreceiver">


    <TextView
        android:id="@+id/text_bubblereciver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="50dp"
        android:paddingBottom="15dp"
        android:text="Sender Message Display Here "
        android:textColor="@color/black"
        android:textSize="18sp">

    </TextView>

        <TextView
            android:id="@+id/text_Receivertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text_bubblereciver"
            android:layout_marginLeft="-45dp"
            android:layout_toRightOf="@id/text_bubblereciver"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="20:09"
            android:textColor="#434343"
            android:textSize="10sp" />
    </RelativeLayout>




</RelativeLayout>