<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/image_reciever"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/pfp_user"
        app:layout_constraintBottom_toBottomOf="@+id/text_reciever"
        app:layout_constraintEnd_toStartOf="@+id/text_reciever"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_reciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Date Mike"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/image_reciever"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="COUNSELLOR"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/card_receiver"
        app:layout_constraintStart_toEndOf="@+id/text_reciever"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#eef1f6"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/image_reciever"
        app:layout_constraintTop_toBottomOf="@+id/text_reciever">

        <LinearLayout
            android:id="@+id/layout_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_bubblereciver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:maxWidth="300dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:text="vgusgvherbhbhbjhbhbjhsrvgueghguerwegyueknkjehjehhehheuiheijheiuhuehiuheiheuuehiuhe"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_Receivertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00am"
        android:textColor="#C0C0C0"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/card_receiver"
        tools:layout_editor_absoluteX="296dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
