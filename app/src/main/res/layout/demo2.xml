<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/receivercontainer"
    android:padding="2dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="35dp"

        android:id="@+id/layoutreceiver"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/global_specific_card"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/backbuttonofspecificchat"
            android:layout_centerVertical="true"
            app:cardCornerRadius="35dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pfp_user"
                android:id="@+id/image_reciever"
                android:scaleType="centerCrop">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_reciever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/global_specific_card"
            android:text="Sachin"
            android:fontFamily="@font/alatsi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/text_reciever"
            android:paddingTop="5dp"
            android:text="COUNSELLOR"
            android:fontFamily="@font/alatsi"
            android:textSize="10sp"
            android:translationY="6dp"/>
    </RelativeLayout>

<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="35dp"
        android:background="@drawable/recieverchatdrawable"
        android:id="@+id/layoutformessage"
    android:layout_below="@id/layoutreceiver">


    <TextView
        android:id="@+id/text_bubblereciver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="50dp"
        android:paddingBottom="15dp"
        android:text="Sender Message Display Here "
        android:textColor="@color/black"
        android:textSize="18sp">

    </TextView>

        <TextView
            android:id="@+id/text_Receivertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text_bubblereciver"
            android:layout_marginLeft="-45dp"
            android:layout_toRightOf="@id/text_bubblereciver"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="20:09"
            android:fontFamily="@font/alatsi"
            android:textColor="#434343"
            android:textSize="10sp" />
    </RelativeLayout>




</RelativeLayout>