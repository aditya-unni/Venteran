<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:padding="15dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/contrastWhite">

    <TextView
        android:id="@+id/Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Report Sachin"
        android:textColor="@color/aquapurple"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndof="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/report_msg"
        android:layout_width="322dp"
        android:layout_height="104dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alatsi"
        android:text="@string/report_msg"
        android:textColor="@color/halfgrey"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Report" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/alatsi"
        android:text="@string/cancel"
        app:layout_constraintTop_toBottomOf="@id/report_msg"
        tools:layout_editor_absoluteX="131dp" />

    <Button
        android:id="@+id/reportbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/alatsi"
        android:text="@string/report"
        app:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintStart_toEndOf="@+id/cancelbtn"
        app:layout_constraintTop_toBottomOf="@id/report_msg" />


</androidx.constraintlayout.widget.ConstraintLayout>